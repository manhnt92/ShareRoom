				android:scaleType="@null"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:src="@mipmap/ic_rating"
				tools:ignore="PrivateResource,RtlHardcoded"
				android:contentDescription="@string/app_name" />
