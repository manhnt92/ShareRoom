<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_root"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_margin="10dp"
	android:layout_gravity="center"
	android:background="@drawable/layout_border_dotted_line"
	tools:ignore="RtlHardcoded">
	<ImageView
		android:id="@+id/image"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:adjustViewBounds="true"
		android:layout_margin="1dp"
		android:contentDescription="@string/app_name"
		android:scaleType="center"
		android:src="@drawable/ic_camera_pressed"
		android:layout_gravity="center"/>
	<ProgressBar
		android:id="@+id/progress"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:indeterminate="false"
		android:max="100"
		android:layout_gravity="bottom"
		android:visibility="gone"
		style="@android:style/Widget.Holo.ProgressBar.Horizontal" />
	<ImageButton
	    android:id="@+id/btn_note"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:contentDescription="@string/app_name"
	    android:layout_gravity="right"
	    android:layout_marginTop="33dp"
	    android:padding="5dp"
	    android:layout_marginRight="1dp"
	    android:src="@drawable/ic_info_pressed"
	    android:background="#55200000"
	    android:visibility="invisible" />
	<ImageButton
	    android:id="@+id/btn_delete"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:contentDescription="@string/app_name"
	    android:layout_gravity="right"
	    android:src="@drawable/ic_remove_pressed"
	    android:background="#55200000"
	    android:layout_marginRight="1dp"
	    android:layout_marginTop="1dp"
	    android:padding="5dp"
	    android:visibility="invisible" />
	<TextView
		android:id="@+id/text_note_image"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal|center_vertical"
		android:visibility="invisible"
		android:paddingBottom="5dp"
		android:textColor="@android:color/white"
		android:layout_gravity="bottom"
		android:layout_margin="1dp"
		android:background="#55200000" />
</FrameLayout>