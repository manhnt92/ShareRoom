<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background"
    tools:ignore="RtlHardcoded">
    <FrameLayout
        android:id="@+id/fl_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        tools:ignore="PrivateResource">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:background="@color/color_opacity" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:gravity="center"
            android:text="@string/room_amenities_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_back"
            android:scaleType="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:contentDescription="@string/app_name" />
        <ImageButton
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:scaleType="@null"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_save"
            android:contentDescription="@string/app_name" />
    </FrameLayout>
    <ListView
        android:id="@+id/list_amenities"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent" 
		android:cacheColorHint="@android:color/transparent"
		android:scrollbars="none">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="5dp">
        <ImageView
            android:src="@mipmap/ic_write_amenities"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_amenities"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_amenitites"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="@string/hint_amenitites"
            app:met_primaryColor="@android:color/white"
            app:met_singleLineEllipsis="false"
            app:met_textColor="@android:color/white"
            app:met_textColorHint="@android:color/white" />
    </LinearLayout>
    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_post"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/app_color"
        android:text="@string/btn_post"
        tools:ignore="ObsoleteLayoutParam" />
</LinearLayout>
