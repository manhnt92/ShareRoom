<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">

        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/color_widget"
                android:dashGap="2dp"
                android:dashWidth="6dp" />

            <solid android:color="@android:color/transparent" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
            <corners android:radius="5dp"/>
        </shape>
    </item>
</layer-list>